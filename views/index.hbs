{{#if message}}
  <script type="text/javascript">
    swal({
      title: "Message incoming!",
      type: 'info',
      text: '{{message}}'
    })
  </script>
{{/if}}
<div class="container" style="width:60%;">
  <div id="chatbox-header" class="row">
    <div class="col-md-6">
      <h1>{{title}}</h1>
      <p>Welcome {{username}}</p>
    </div>
    <div class="col-md-6 right">
      <a href="/logout" class="btn btn-danger">Logout</a>
      <a href="/create_chat_box" class="btn btn-success">Create</a>
    </div>
  </div>
  <div class="chat_boxes">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Max Users</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>
        {{#if chat_boxes}}
          {{#each chat_boxes}}
          <tr>
            <td>{{name}}</td>
            <td>{{description}}</td>
            <td>{{max_users}}</td>
            <td><a href="/chat_room/{{_id}}">Join</a></td>
          </tr>
          {{/each}}
        {{/if}}
      </tbody>
    </table>
  </div>
</div>
